<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <display-name>A Servlet WebApp</display-name>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>io.codeforall.fanstatics.LoginCustomerMVC</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>CustomerMVC</servlet-name>
        <servlet-class>io.codeforall.fanstatics.CustomerMVC</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/loginmvc</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CustomerMVC</servlet-name>
        <url-pattern>/customermvc</url-pattern>
    </servlet-mapping>
    
</web-app>